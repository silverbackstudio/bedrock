{
  "name": "silverback/wp-website",
  "type": "project",
  "license": "MIT",
  "description": "WordPress boilerplate with modern development tools, easier configuration, and an improved folder structure",
  "homepage": "https://roots.io/bedrock/",
  "authors": [
    {
      "name": "Brando Meniconi",
      "email": "b.meniconi@silverbackstudio.it",
      "homepage": "https://github.com/brandomeniconi"
    },    
    {
      "name": "Scott Walkinshaw",
      "email": "scott.walkinshaw@gmail.com",
      "homepage": "https://github.com/swalkinshaw"
    },
    {
      "name": "Ben Word",
      "email": "ben@benword.com",
      "homepage": "https://github.com/retlehs"
    }
  ],
  "keywords": [
    "bedrock", "composer", "roots", "wordpress", "wp", "wp-config"
  ],
  "support": {
    "issues": "https://github.com/roots/bedrock/issues",
    "forum": "https://discourse.roots.io/category/bedrock"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
        "type": "composer",
        "url": "https://packages.svbk.it"
    }
  ],
  "require": {
    "php": ">=7.2",
    "composer/installers": "^1.7",
    "google/cloud-error-reporting": "^0.14.5",
    "google/google-cloud-storage-wordpress-plugin": "^1.3",
    "monolog/monolog": "^1.23",
    "oscarotero/env": "^1.2.0",
    "roots/wordpress": "^5.3.0",
    "roots/wp-config": "1.0.0",
    "roots/wp-password-bcrypt": "1.0.0",
    "silverback/svbk-wp-email": "^2.1",
    "silverback/svbk-wp-hubspot": "^1.4",
    "silverback/wp-helpers": "^5.2.0",
    "silverbackstudio/theme_svbk": "dev-master",
    "silverbackstudio/wp-log": "^1.0",
    "vlucas/phpdotenv": "^3.4.0",
    "wpackagist-plugin/amp": ">=0.4.2",
    "wpackagist-plugin/jetpack": ">=5.0",
    "wpackagist-plugin/safe-svg": ">=1.5.0",
    "wpackagist-plugin/wordpress-importer": "0.6.3",
    "wpackagist-plugin/wordpress-seo": ">=6.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.4.2",
    "roave/security-advisories": "dev-master",
    "wpackagist-plugin/loco-translate": "^2.0",
    "wpackagist-plugin/custom-post-type-ui": "^1.5"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": {
      "silverbackstudio/*": "source",
      "silverback/*": "source",
      "svbk/*": "source",
      "*":"dist"
    },
    "sort-packages": true      
  },  
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  },
  "scripts": {      
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ],
    "test": [
      "phpcs"
    ],
    "deploy": [
      "gcloud app deploy app.yaml cron.yaml --flags-file=flags.yml"
    ]    
  }
}
